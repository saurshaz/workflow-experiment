{
    "apps": [
        {
          // applyx (auth)
          "name"        : "applyx-app",
          "script"      : "applyx/server.js",
          "watch"      : true,
          "cwd"         : ".",
          "env": {
            "NODE_ENV": "development",
            "LOG_LEVEL": "info",
            "AWESOME_SERVICE_API_TOKEN": "xxx"
          },
          "env_production" : {
             "NODE_ENV": "production"
          },
          "env_staging" : {
             "NODE_ENV" : "staging",
             "TEST"     : true
          }
        },

        {
          // riot-starter (auth) server
          "name"        : "auth-app-server",
          "script"      : "riot-applyx/server/index.js",
          "pre-deploy"  : "sh riot-applyx/riotserve.sh",
          "watch"      : true,
          "cwd"         : ".",
          "env": {
            "LOG_LEVEL": "info",
            "NODE_ENV": "development",
            "AWESOME_SERVICE_API_TOKEN": "xxx"
          },
          "env_production" : {
             "NODE_ENV": "production"
          },
          "env_staging" : {
             "NODE_ENV" : "staging",
             "TEST"     : true
          }
        },
        {
          // Brackets App
          "name"        : "brackets-app",
          "script"      : "/usr/local/bin/npm",
          "args"        : ["start"],
          "cwd"         : "./brackets",
          "watch"      : true,
          "env": {
            "NODE_ENV": "development",
            "AWESOME_SERVICE_API_TOKEN": "xxx"
          },
          "env_production" : {
             "NODE_ENV": "production"
          },
          "env_staging" : {
             "NODE_ENV" : "staging",
             "TEST"     : true
          }
        },
        {
            // Fyler App
            "name": "fyler-app",
            "script": "fyler/server.js",
            "pre-deploy" : "gulp prod",
            "cwd": ".",
            "watch"      : true,
            "env": {
                "LOG_LEVEL": "info",
                "NODE_ENV": "development",
                "AWESOME_SERVICE_API_TOKEN": "xxx"
            },
            "env_production": {
                "NODE_ENV": "production"
            },
            "env_staging": {
                "NODE_ENV": "staging",
                "TEST": true
            }
        }
    ]
}
